<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="./static/rss.xslt"?>
<rss version="2.0">
  <channel>
    <title>RSS Todo List - <%= name %></title>
    <link><%= rootUrl %>/?n=<%= name %></link>
    <description>RSS 2.0 feed containing your todolist items</description>
    <language>en-us</language>
    <webMaster>me@paulgreg.me (Gr√©gory PAUL)</webMaster>
	 <% entries.forEach(entry => { %>
	 	<item>
			<title><%= entry.title %></title>
	 		<link><%= entry.url %></link>
	 		<description><%= entry.description || "" %></description>
			<pubDate><%= (entry.updatedAt || entry.createdAt).toUTCString() %></pubDate>
			<guid isPermaLink="false">paulgreg@<%= entry.id %></guid>
	 	</item>
	 <% }) %>
	 <% if (entries.length === 0) { %>
	 	<item>
			<title>Default item in your feed</title>
	 		<link><%= rootUrl %></link>
			<guid isPermaLink="false">paulgreg@0000000001</guid>
	 		<description>Default sample item</description>
	 	</item>
	 <% } %>
	</channel>
</rss>

